import java.util.*;

public class Hw1{
   public static void main(String[] argv){
      int number;

      System.out.print("Please input an integerï¼š");
      Scanner sc = new Scanner(System.in);
      number=sc.nextInt();
      if(number % 2 == 0){
	 System.out.println("This is an even number");
      }
      else{
         System.out.println("This is an odd number");
      }
  }
}
